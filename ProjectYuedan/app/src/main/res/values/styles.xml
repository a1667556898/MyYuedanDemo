<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppThemeTwo" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="mainTab_Rl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimens_5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="mainTab_Img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="mainTab_Tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:layout_marginTop">@dimen/dimens_2</item>
    </style>

    <style name="bg_Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_45</item>
        <item name="android:layout_marginLeft">@dimen/dimens_28</item>
        <item name="android:layout_marginRight">@dimen/dimens_28</item>
        <item name="android:background">@drawable/bg_login</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Ed_Login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimens_15</item>
        <item name="android:layout_marginRight">@dimen/dimens_15</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="L_Select">
        <item name="android:layout_width">@dimen/dimens_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="L_Select_word">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_12</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text13</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="loadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item><!--dialog背景-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="Information_L">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Information_T">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimens_15</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Information_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text11</item>
        <item name="android:textColor">@color/textDarkGray</item>
    </style>

    <style name="PublishSkill_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:layout_marginLeft">@dimen/dimens_10</item>
        <item name="android:layout_marginBottom">@dimen/dimens_10</item>
        <item name="android:layout_marginTop">@dimen/dimens_15</item>
    </style>

    <style name="TV_publishSkill_servicename">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:layout_marginLeft">@dimen/dimens_15</item>
    </style>

    <style name="TV_PublishSkill_serviceorange">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_marginLeft">@dimen/dimens_15</item>
    </style>

    <style name="TV_publishSkill_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text10</item>
        <item name="android:textColor">@color/textLightGray</item>
        <item name="android:layout_marginLeft">@dimen/dimens_10</item>
    </style>

    <style name="ET_publishSkill_price">
        <item name="android:layout_width">@dimen/dimens_80</item>
        <item name="android:layout_height">@dimen/dimens_22</item>
        <item name="android:textSize">@dimen/text10</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/bg_input_gray</item>
        <item name="android:layout_marginLeft">@dimen/dimens_10</item>

    </style>

    <declare-styleable name="BorderTextView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="followTextColor" format="boolean" />
    </declare-styleable>

</resources>
