<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/animleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_80"
        android:gravity="center"
        android:orientation="vertical">

        <tohope.app.yuedan.customview.ImageViewPlus
            android:layout_width="@dimen/dimens_54"
            android:layout_height="@dimen/dimens_54"
            android:src="@mipmap/demand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_22"
            android:textSize="@dimen/text14"
            android:textColor="@color/textBlack1"
            android:text="@string/publish_demand" />
        <ImageView
            android:id="@+id/img_NewerLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_newerread"
           android:layout_marginTop="@dimen/dimens_10"
            android:padding="@dimen/dimens_5"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/animright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimens_80"
        android:orientation="vertical">

        <tohope.app.yuedan.customview.ImageViewPlus
            android:layout_width="@dimen/dimens_54"
            android:layout_height="@dimen/dimens_54"
            android:src="@mipmap/skill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_22"
            android:textSize="@dimen/text14"
            android:textColor="@color/textBlack1"
            android:text="@string/publish_skill" />
        <ImageView
            android:id="@+id/img_NewerRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_newerread"
            android:layout_marginTop="@dimen/dimens_10"
            android:padding="@dimen/dimens_5"/>
    </LinearLayout>

    <tohope.app.yuedan.customview.ImageViewPlus
        android:id="@+id/animrorate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/rotate_image" />

</RelativeLayout>