<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_15"
        android:layout_marginLeft="@dimen/dimens_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_Classifition_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/leisure_time" />

        <TextView
            android:id="@+id/tv_Classifition_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_5"
            android:text="休闲娱乐" />
    </LinearLayout>

    <tohope.app.yuedan.customview.NoScrollGridView
        android:id="@+id/nsg_Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:scrollbars="none" />
</LinearLayout>