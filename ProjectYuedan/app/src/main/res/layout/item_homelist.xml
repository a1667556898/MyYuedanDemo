<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dimens_40"
            android:layout_height="@dimen/dimens_40"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_15"
                android:text="男士spa"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_15">

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="安蕊希"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/text12" />

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@id/tv_nickName"
                    android:src="@mipmap/women" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimens_2"
                    android:layout_toRightOf="@id/img_sex"
                    android:text="36"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/text12" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="虹口区"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dimens_5"
                    android:layout_toLeftOf="@id/tv_address"
                    android:src="@mipmap/ico_location" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_addImgs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginRight="@dimen/dimens_15"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_15"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_10"
        android:text="线下服务 68/小时"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/text12" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_10"
        android:maxLines="1"
        android:text="肩颈调理，腰背调理，睡眠问题"
        android:textColor="@color/textDarkGray"
        android:textSize="@dimen/text12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text12" />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:src="@mipmap/ico_phonecheck" />

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:src="@mipmap/ico_cardcheck" />

        <ImageView
            android:id="@+id/img_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:src="@mipmap/ico_awardcheck" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dimens_15"
        android:background="@color/bgGray1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_5">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="分享"
                android:textColor="@color/textLightGray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimens_30"
            android:background="@color/bgGray1" />

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_5">

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="47"
                android:textColor="@color/textLightGray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimens_30"
            android:background="@color/bgGray1" />

        <LinearLayout
            android:id="@+id/ll_zan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_5">

            <ImageView
                android:id="@+id/img_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_zan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="234"
                android:textColor="@color/textLightGray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dimens_30"
            android:background="@color/bgGray1" />

        <LinearLayout
            android:id="@+id/ll_yueta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_5">

            <ImageView
                android:id="@+id/img_yueta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_yueta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="约ta"
                android:textColor="@color/textLightGray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>