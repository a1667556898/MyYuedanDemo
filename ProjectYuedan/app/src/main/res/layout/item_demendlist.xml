<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_women" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_weight="1"
            android:text="看电影"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_10"
            android:text="未成交"
            android:textColor="@color/textLightGray"
            android:textSize="@dimen/text12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_time" />

        <TextView
            android:id="@+id/tv_outDateTime"
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_weight="1"
            android:text="一天后过期"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/tv_publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_10"
            android:text="发布时间：2017-03-29 17:30"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimens_20"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_weight="1"
            android:background="@color/bgGray2" />

        <TextView
            android:id="@+id/tv_NumDemend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:text="已有0位服务者应邀"
            android:layout_marginRight="@dimen/dimens_10"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text12" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_weight="1"
            android:background="@color/bgGray2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_noDemend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dimens_12"
            android:src="@mipmap/ico_nodemend" />

        <TextView
            android:id="@+id/tv_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="请耐心等待服务者应邀~"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text10" />

        <LinearLayout
            android:id="@+id/ll_addImgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="查看详情"
            android:textColor="@color/textDarkGray1"
            android:textSize="@dimen/text10" />
    </LinearLayout>

</LinearLayout>